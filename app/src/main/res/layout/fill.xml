        android:layout_height="46dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="168dp"
        android:text="名字"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editText2"
